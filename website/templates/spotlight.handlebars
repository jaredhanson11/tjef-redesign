<div class="section-title">TJEF Stories</div>
{{>dots dots=dots}}
<div class="spotlight-picture {{spotlight.class}}{{#if moreImages}} more-images{{/if}}">
  <div class="spotlight-img"><img src="{{img.url}}" /></div>
  {{#if moreImages}}
    <div class="spotlight-overlay">
      <div class="exit"><div class="exit-button">&#10006;</div></div>
      {{#each previews}}
      {{!-- See index.js exitButton()  --}}
      <div class="preview"><img src="{{this.url}}"/></div>
      {{/each}}
    </div>
  {{/if}}
</div>
<div class="spotlight-caption">{{img.caption}}</div>
<div class="spotlight-description">{{spotlight.description}}</div>
